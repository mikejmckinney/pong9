{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "..",
    "outDir": "dist",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@colyseus/schema": ["node_modules/@colyseus/schema"],
      "@colyseus/schema/*": ["node_modules/@colyseus/schema/*"]
    }
  },
  "include": ["src/**/*.ts", "../shared/**/*.ts"]
}
